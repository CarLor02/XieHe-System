# ===========================================
# MySQL 数据库配置
# ===========================================
DB_HOST=mysql
DB_PORT=3306
DB_USER=medical_user
DB_PASSWORD=medical_pass_2024
DB_NAME=medical_system

# MySQL Root 密码（仅用于容器初始化）
MYSQL_ROOT_PASSWORD=medical_root_2024

# ===========================================
# Redis 配置
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# ===========================================
# JWT 认证配置
# ===========================================
JWT_SECRET_KEY=dev_jwt_secret_key_2024
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# 应用配置
