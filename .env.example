# 医疗影像诊断系统环境配置示例
# 复制此文件为 .env 并填入实际配置值

# ===========================================
# 数据库配置
# ===========================================

# MySQL 数据库配置
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=123456
DB_NAME=medical_imaging_system

# Redis 配置
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# 后端服务配置
# ===========================================

# FastAPI 配置
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_RELOAD=true

# JWT 配置
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 密码加密配置
PASSWORD_HASH_ALGORITHM=bcrypt
PASSWORD_HASH_ROUNDS=12

# ===========================================
# 前端配置
# ===========================================

# Next.js 配置
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=医疗影像诊断系统
NEXT_PUBLIC_APP_VERSION=1.0.0

# ===========================================
# 文件存储配置
# ===========================================

# 本地存储配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=.dcm,.jpg,.jpeg,.png,.pdf

# 云存储配置 (可选)
# CLOUD_STORAGE_TYPE=aws_s3|aliyun_oss|qcloud_cos
# CLOUD_STORAGE_BUCKET=your-bucket-name
# CLOUD_STORAGE_ACCESS_KEY=your-access-key
# CLOUD_STORAGE_SECRET_KEY=your-secret-key
# CLOUD_STORAGE_REGION=your-region

# ===========================================
# AI 模型配置
# ===========================================

# 模型服务配置
AI_MODEL_SERVICE_URL=http://localhost:8001
AI_MODEL_TIMEOUT=30
AI_MODEL_MAX_RETRIES=3

# 模型文件路径
AI_MODELS_DIR=./models
DEFAULT_MODEL_NAME=medical_diagnosis_v1.0

# ===========================================
# 日志配置
# ===========================================

# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ===========================================
# 安全配置
# ===========================================

# CORS 配置
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# 安全密钥
SECURITY_SECRET_KEY=your-security-secret-key-change-this
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# 会话配置
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# ===========================================
# 邮件配置
# ===========================================

# SMTP 配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# 邮件发送配置
FROM_EMAIL=noreply@medical-system.com
FROM_NAME=医疗影像诊断系统

# ===========================================
# 监控配置
# ===========================================

# 性能监控
ENABLE_METRICS=true
METRICS_PORT=9090

# 健康检查
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ===========================================
# 开发环境配置
# ===========================================

# 开发模式
DEVELOPMENT_MODE=true
DEBUG_SQL=false
ENABLE_PROFILING=false

# 测试配置
TEST_DB_NAME=medical_imaging_system_test
RUN_MIGRATIONS=true

# ===========================================
# 生产环境配置
# ===========================================

# 生产环境标识
ENVIRONMENT=development  # development|staging|production

# SSL 配置
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# 备份配置
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # 每天凌晨2点
BACKUP_RETENTION_DAYS=30
