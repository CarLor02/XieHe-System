{
  "name": "medical-imaging-diagnosis-system",
  "displayName": "医疗影像诊断系统",
  "version": "1.0.0",
  "description": "基于AI的医疗影像诊断系统，支持DICOM影像处理、智能诊断、报告生成等功能",
  "author": {
    "name": "Medical Imaging Team",
    "email": "team@medical-imaging.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/medical-imaging-system.git"
  },
  "keywords": [
    "medical",
    "imaging",
    "diagnosis",
    "AI",
    "DICOM",
    "healthcare",
    "machine-learning"
  ],
  "architecture": {
    "frontend": {
      "framework": "Next.js",
      "language": "TypeScript",
      "styling": "Tailwind CSS",
      "port": 3000
    },
    "backend": {
      "framework": "FastAPI",
      "language": "Python",
      "version": "3.9+",
      "port": 8000
    },
    "database": {
      "primary": "MySQL 8.0+",
      "cache": "Redis 6.x+",
      "ports": {
        "mysql": 3306,
        "redis": 6379
      }
    },
    "deployment": {
      "containerization": "Docker",
      "orchestration": "Docker Compose",
      "reverse_proxy": "Nginx"
    }
  },
  "features": [
    "用户认证与授权",
    "患者信息管理",
    "DICOM影像上传与存储",
    "影像查看器",
    "AI智能诊断",
    "诊断报告生成",
    "数据统计与分析",
    "系统监控与日志"
  ],
  "development": {
