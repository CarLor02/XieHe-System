# DICOM导入服务配置示例
# 复制此文件为 .env 并填写实际配置

# 服务配置
HOST=0.0.0.0
PORT=8001
DEBUG=True

# XieHe后端API配置
BACKEND_URL=http://localhost:8000
API_TOKEN=your_api_token_here

# DICOM处理配置
DICOM_SOURCE_PATH=/data/dicom
OUTPUT_DIR=./output
JPG_QUALITY=95

# 窗宽窗位配置
DEFAULT_WINDOW_CENTER=40
DEFAULT_WINDOW_WIDTH=400

# 去重配置
ENABLE_DEDUPLICATION=True

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/dicom_import.log

