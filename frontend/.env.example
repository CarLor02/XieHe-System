# XieHe医疗影像诊断系统 - 环境变量配置示例
# 复制此文件为 .env.local (开发环境) 或 .env.production (生产环境) 并填入实际配置值

# ===========================================
# 基础应用配置
# ===========================================
NEXT_PUBLIC_APP_NAME=XieHe医疗影像诊断系统
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# ===========================================
# API 配置
# ===========================================
# 后端 API 地址
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_API_TIMEOUT=30000

# ===========================================
# AI检测服务配置
# ===========================================
# 正位X光片AI检测接口
# - predict: 用于AI测量功能
# - detect_keypoints: 用于AI检测功能
NEXT_PUBLIC_AI_DETECT_URL=http://localhost:8001/predict
NEXT_PUBLIC_AI_DETECT_KEYPOINTS_URL=http://localhost:8001/detect_keypoints

# 侧位X光片AI检测接口
# - api/detect_and_keypoints: 用于AI测量功能
# - api/detect: 用于AI检测功能
NEXT_PUBLIC_AI_DETECT_LATERAL_URL=http://localhost:8002/api/detect_and_keypoints
NEXT_PUBLIC_AI_DETECT_LATERAL_DETECT_URL=http://localhost:8002/api/detect

# AI模型配置
NEXT_PUBLIC_AI_MODEL_CONFIDENCE_THRESHOLD=0.8

# ===========================================
# WebSocket 配置
# ===========================================
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8000/ws
NEXT_PUBLIC_WEBSOCKET_RECONNECT_INTERVAL=5000
NEXT_PUBLIC_ENABLE_WEBSOCKET=true

# ===========================================
# 功能开关
# ===========================================
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_AI_DIAGNOSIS=true
NEXT_PUBLIC_FEATURE_AI_DIAGNOSIS=true
NEXT_PUBLIC_FEATURE_REPORT_EXPORT=true
NEXT_PUBLIC_FEATURE_DARK_MODE=true

# ===========================================
# 文件上传配置
# ===========================================
NEXT_PUBLIC_MAX_FILE_SIZE=100000000
NEXT_PUBLIC_MAX_IMAGE_SIZE=52428800
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.dcm,.dicom
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=.jpg,.jpeg,.png,.bmp,.tiff,.dcm,.dicom

# ===========================================
# DICOM 配置
# ===========================================
NEXT_PUBLIC_DICOM_VIEWER_ENABLED=true
NEXT_PUBLIC_DICOM_WADO_URL=http://localhost:8000/wado
NEXT_PUBLIC_DICOM_STANDARD_VERSION=3.0

# ===========================================
# 认证配置
# ===========================================
NEXT_PUBLIC_JWT_SECRET=your-jwt-secret-key
NEXT_PUBLIC_TOKEN_STORAGE_KEY=medical_system_token
NEXT_PUBLIC_REFRESH_TOKEN_STORAGE_KEY=medical_system_refresh_token
NEXT_PUBLIC_SESSION_TIMEOUT=1800000

# ===========================================
# 调试配置
# ===========================================
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=info
NEXT_PUBLIC_SHOW_DEV_TOOLS=false

# ===========================================
# 性能配置
# ===========================================
NEXT_PUBLIC_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_IMAGE_QUALITY=80

# ===========================================
# 缓存配置
# ===========================================
NEXT_PUBLIC_CACHE_ENABLED=true
NEXT_PUBLIC_CACHE_TTL=300000

# ===========================================
# 国际化配置
# ===========================================
NEXT_PUBLIC_DEFAULT_LOCALE=zh-CN
NEXT_PUBLIC_SUPPORTED_LOCALES=zh-CN,en-US

