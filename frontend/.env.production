# XieHe医疗影像诊断系统 - 生产环境配置

# API配置
NEXT_PUBLIC_API_BASE_URL=https://api.xiehe-medical.com
NEXT_PUBLIC_API_VERSION=v1

# WebSocket配置
NEXT_PUBLIC_WEBSOCKET_URL=wss://api.xiehe-medical.com/ws

# 应用配置
NEXT_PUBLIC_APP_NAME=XieHe医疗影像诊断系统
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=production

# 功能开关
NEXT_PUBLIC_ENABLE_WEBSOCKET=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_AI_DIAGNOSIS=true

# 文件上传配置
NEXT_PUBLIC_MAX_FILE_SIZE=100000000
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.dcm,.dicom

# 调试配置
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_LOG_LEVEL=error
