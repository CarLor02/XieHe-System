# 医疗影像诊断系统前端环境配置示例
# 复制此文件为 .env.local 并填入实际配置值

# ===========================================
# 基础应用配置
# ===========================================

# 应用名称
NEXT_PUBLIC_APP_NAME=医疗影像诊断系统
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=基于AI的医疗影像诊断系统

# 环境配置
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# ===========================================
# API 配置
# ===========================================

# 后端 API 地址
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# API 超时时间 (毫秒)
NEXT_PUBLIC_API_TIMEOUT=30000

# ===========================================
# 认证配置
# ===========================================

# JWT 配置
NEXT_PUBLIC_JWT_SECRET=your-jwt-secret-key
NEXT_PUBLIC_TOKEN_STORAGE_KEY=medical_system_token
NEXT_PUBLIC_REFRESH_TOKEN_STORAGE_KEY=medical_system_refresh_token

# 会话配置
NEXT_PUBLIC_SESSION_TIMEOUT=1800000  # 30分钟 (毫秒)

# ===========================================
# 文件上传配置
# ===========================================

# 文件上传限制
NEXT_PUBLIC_MAX_FILE_SIZE=104857600  # 100MB (字节)
NEXT_PUBLIC_MAX_IMAGE_SIZE=52428800  # 50MB (字节)

# 允许的文件类型
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=.jpg,.jpeg,.png,.bmp,.tiff,.dcm,.dicom
NEXT_PUBLIC_ALLOWED_DOCUMENT_TYPES=.pdf,.doc,.docx,.txt

# ===========================================
# DICOM 配置
# ===========================================

# DICOM 查看器配置
NEXT_PUBLIC_DICOM_VIEWER_ENABLED=true
NEXT_PUBLIC_DICOM_WADO_URL=http://localhost:8000/wado

# Cornerstone 配置
NEXT_PUBLIC_CORNERSTONE_WEB_IMAGE_LOADER=true
NEXT_PUBLIC_CORNERSTONE_FILE_IMAGE_LOADER=true

# ===========================================
# 地图配置
# ===========================================

# 百度地图 API Key
NEXT_PUBLIC_BAIDU_MAP_API_KEY=your-baidu-map-api-key

# 高德地图 API Key
NEXT_PUBLIC_AMAP_API_KEY=your-amap-api-key

# ===========================================
# 第三方服务配置
# ===========================================

# Sentry 错误追踪
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=your-ga-tracking-id

# 百度统计
NEXT_PUBLIC_BAIDU_ANALYTICS_ID=your-baidu-analytics-id

# ===========================================
# 功能开关
# ===========================================

# 功能开关
NEXT_PUBLIC_FEATURE_AI_DIAGNOSIS=true
NEXT_PUBLIC_FEATURE_REPORT_EXPORT=true
NEXT_PUBLIC_FEATURE_MOBILE_APP=false
NEXT_PUBLIC_FEATURE_DARK_MODE=true
NEXT_PUBLIC_FEATURE_MULTI_LANGUAGE=false

# 调试开关
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_SHOW_PERFORMANCE_METRICS=false

# ===========================================
# 样式配置
# ===========================================

# 主题配置
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_THEME_STORAGE_KEY=medical_system_theme

# 颜色配置
NEXT_PUBLIC_PRIMARY_COLOR=#0066cc
NEXT_PUBLIC_SECONDARY_COLOR=#6c757d

# ===========================================
# 缓存配置
# ===========================================

# 缓存配置
NEXT_PUBLIC_CACHE_ENABLED=true
NEXT_PUBLIC_CACHE_TTL=300000  # 5分钟 (毫秒)

# 离线支持
NEXT_PUBLIC_OFFLINE_SUPPORT=false

# ===========================================
# 安全配置
# ===========================================

# 内容安全策略
NEXT_PUBLIC_CSP_ENABLED=true

# 允许的域名
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===========================================
# 开发配置
# ===========================================

# 开发工具
NEXT_PUBLIC_SHOW_DEV_TOOLS=true
NEXT_PUBLIC_SHOW_GRID=false
NEXT_PUBLIC_SHOW_BREAKPOINTS=false

# 模拟数据
NEXT_PUBLIC_USE_MOCK_DATA=false
NEXT_PUBLIC_MOCK_DELAY=1000  # 模拟延迟 (毫秒)

# ===========================================
# 性能配置
# ===========================================

# 性能监控
NEXT_PUBLIC_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_WEB_VITALS_ENABLED=true

# 图片优化
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_IMAGE_QUALITY=80

# ===========================================
# 国际化配置
# ===========================================

# 默认语言
NEXT_PUBLIC_DEFAULT_LOCALE=zh-CN
NEXT_PUBLIC_SUPPORTED_LOCALES=zh-CN,en-US

# ===========================================
# 医疗专用配置
# ===========================================

# 医疗标准
NEXT_PUBLIC_DICOM_STANDARD_VERSION=3.0
NEXT_PUBLIC_HL7_FHIR_VERSION=R4

# 医疗设备配置
NEXT_PUBLIC_SUPPORTED_MODALITIES=CT,MR,US,XR,CR,DR,MG,PT,NM

# 诊断配置
NEXT_PUBLIC_AI_MODEL_CONFIDENCE_THRESHOLD=0.8
NEXT_PUBLIC_DIAGNOSIS_AUTO_SAVE_INTERVAL=30000  # 30秒 (毫秒)

# ===========================================
# 通知配置
# ===========================================

# 浏览器通知
NEXT_PUBLIC_BROWSER_NOTIFICATIONS=true

# WebSocket 配置
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8000/ws
NEXT_PUBLIC_WEBSOCKET_RECONNECT_INTERVAL=5000  # 5秒 (毫秒)

# ===========================================
# 日志配置
# ===========================================

# 日志级别
NEXT_PUBLIC_LOG_LEVEL=info

# 日志上报
NEXT_PUBLIC_LOG_REPORTING=false
NEXT_PUBLIC_LOG_ENDPOINT=http://localhost:8000/api/v1/logs
