# 医疗影像诊断系统后端环境配置示例
# 复制此文件为 .env 并填入实际配置值

# ===========================================
# 基础应用配置
# ===========================================

# 项目信息
PROJECT_NAME=医疗影像诊断系统
PROJECT_DESCRIPTION=基于AI的医疗影像诊断系统，支持DICOM影像处理、智能诊断、报告生成等功能
VERSION=1.0.0
API_V1_STR=/api/v1

# 环境配置
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# 服务器配置
HOST=0.0.0.0
PORT=8000

# ===========================================
# 安全配置
# ===========================================

# JWT 配置
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 密码配置
PASSWORD_MIN_LENGTH=8
PASSWORD_HASH_ROUNDS=12

# CORS 配置
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://localhost:3000

# 受信任主机
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ===========================================
# 数据库配置
# ===========================================

# MySQL 配置
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=123456
DB_NAME=medical_imaging_system

# 数据库连接池配置
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# 测试数据库配置
TEST_DB_NAME=medical_imaging_system_test

# ===========================================
# Redis 配置
# ===========================================

REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TIMEOUT=5

# ===========================================
# 文件上传配置
# ===========================================

# 上传目录
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# 文件大小限制 (字节)
MAX_FILE_SIZE=104857600  # 100MB
MAX_IMAGE_SIZE=52428800  # 50MB

# ===========================================
# 邮件配置
# ===========================================

# SMTP 配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# 邮件发送配置
FROM_EMAIL=noreply@medical-system.com
FROM_NAME=医疗影像诊断系统

# ===========================================
# 日志配置
# ===========================================

# 日志级别
LOG_LEVEL=INFO

# 日志文件配置
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ===========================================
# AI 模型配置
# ===========================================

# 模型服务配置
AI_MODEL_SERVICE_URL=http://localhost:8001
AI_MODEL_TIMEOUT=30
AI_MODEL_MAX_RETRIES=3

# 模型文件路径
AI_MODELS_DIR=./models
DEFAULT_MODEL_NAME=medical_diagnosis_v1.0

# ===========================================
# 缓存配置
# ===========================================

# 缓存过期时间 (秒)
CACHE_EXPIRE_TIME=3600  # 1小时
SESSION_EXPIRE_TIME=86400  # 24小时

# ===========================================
# 监控配置
# ===========================================

# 性能监控
ENABLE_METRICS=true
METRICS_PORT=9090

# 健康检查
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ===========================================
# 第三方服务配置
# ===========================================

# Sentry 错误追踪
SENTRY_DSN=

# 云存储配置 (可选)
CLOUD_STORAGE_TYPE=  # aws_s3, aliyun_oss, qcloud_cos
CLOUD_STORAGE_BUCKET=
CLOUD_STORAGE_ACCESS_KEY=
CLOUD_STORAGE_SECRET_KEY=
CLOUD_STORAGE_REGION=

# ===========================================
# 开发配置
# ===========================================

# 开发模式配置
DEVELOPMENT_MODE=true
DEBUG_SQL=false
ENABLE_PROFILING=false

# 测试配置
RUN_MIGRATIONS=true
