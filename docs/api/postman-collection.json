            }
          }
        },
        {
          "name": "获取影像研究详情",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/studies/{{study_id}}",
              "host": ["{{base_url}}"],
              "path": ["studies", "{{study_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "诊断报告",
      "item": [
        {
          "name": "获取诊断报告列表",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/reports?page=1&size=20&patient_id={{patient_id}}&status=approved",
              "host": ["{{base_url}}"],
              "path": ["reports"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "size",
                  "value": "20"
                },
                {
                  "key": "patient_id",
                  "value": "{{patient_id}}"
                },
                {
                  "key": "status",
                  "value": "approved"
                }
              ]
            }
          }
        },
        {
          "name": "创建诊断报告",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"patient_id\": \"{{patient_id}}\",\n  \"study_id\": \"{{study_id}}\",\n  \"template_id\": \"template_001\",\n  \"title\": \"胸部CT平扫报告\",\n  \"clinical_info\": \"胸痛3天，伴咳嗽\",\n  \"examination_method\": \"胸部CT平扫\",\n  \"findings\": \"双肺纹理清晰，未见明显异常密度影...\",\n  \"impression\": \"双肺未见明显异常\",\n  \"recommendations\": \"建议定期复查\",\n  \"priority\": \"normal\"\n}"
