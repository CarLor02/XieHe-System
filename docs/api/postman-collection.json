            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"李四\",\n  \"gender\": \"female\",\n  \"birth_date\": \"1985-06-20\",\n  \"phone\": \"13987654321\",\n  \"id_card\": \"110101198506201234\",\n  \"address\": \"北京市海淀区中关村大街1号\",\n  \"emergency_contact\": \"王五\",\n  \"emergency_phone\": \"13612345678\",\n  \"blood_type\": \"A+\",\n  \"height\": 165.5,\n  \"weight\": 55.0,\n  \"allergies\": [\"青霉素\", \"海鲜\"],\n  \"medical_history\": {\n    \"diabetes\": \"2020-01-01\",\n    \"hypertension\": \"2019-06-15\"\n  },\n  \"insurance_type\": \"城镇职工医保\",\n  \"insurance_no\": \"1101011234567890\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/patients",
              "host": ["{{base_url}}"],
              "path": ["patients"]
            }
          }
        },
        {
          "name": "获取患者详情",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/patients/{{patient_id}}",
              "host": ["{{base_url}}"],
              "path": ["patients", "{{patient_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "影像管理",
      "item": [
        {
          "name": "获取影像研究列表",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/studies?page=1&size=20&patient_id={{patient_id}}&modality=CT&status=completed",
              "host": ["{{base_url}}"],
              "path": ["studies"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "size",
                  "value": "20"
                },
                {
                  "key": "patient_id",
                  "value": "{{patient_id}}"
                },
                {
                  "key": "modality",
                  "value": "CT"
                },
                {
                  "key": "status",
                  "value": "completed"
                }
              ]
            }
          }
        },
        {
          "name": "创建影像研究",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"patient_id\": \"{{patient_id}}\",\n  \"study_date\": \"2025-09-24\",\n  \"study_time\": \"10:30:00\",\n  \"study_description\": \"腹部CT增强\",\n  \"modality\": \"CT\",\n  \"body_part\": \"腹部\",\n  \"referring_physician\": \"张医生\",\n  \"performing_physician\": \"李技师\",\n  \"priority\": \"normal\",\n  \"clinical_info\": \"腹痛待查\"\n}"
            },
            "url": {
